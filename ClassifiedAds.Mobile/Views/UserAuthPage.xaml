<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:ClassifiedAds.Mobile.ViewModels"
             x:Class="ClassifiedAds.Mobile.Views.UserAuthPage"
             Title="Account"
             Shell.NavBarIsVisible="False"
             BackgroundColor="White">

    <Grid>

        <ScrollView IsVisible="{Binding IsNotLoggedIn}">
            <VerticalStackLayout Spacing="25" Padding="30" VerticalOptions="Center">

                <Label Text="VJU" 
                       FontSize="42" 
                       FontAttributes="Bold" 
                       TextColor="Black"
                       HorizontalOptions="Center" 
                       Margin="0,40,0,40"/>

                <VerticalStackLayout Spacing="5">
                    <Label Text="Username/Email" TextColor="#555" FontSize="14" Margin="5,0,0,0"/>
                    <Border StrokeThickness="0" BackgroundColor="#F0F0F0" StrokeShape="RoundRectangle 12" HeightRequest="50" Padding="15,0">
                        <Grid ColumnDefinitions="30, *">
                            <Label Grid.Column="0" Text="ðŸ‘¤" VerticalOptions="Center" TextColor="Gray"/>
                            <Entry Grid.Column="1" 
                                   Text="{Binding Email}" 
                                   Placeholder="Enter your email" 
                                   Keyboard="Email"
                                   TextColor="Black"
                                   PlaceholderColor="Gray"
                                   VerticalOptions="Center"
                                   BackgroundColor="Transparent"/>
                        </Grid>
                    </Border>
                </VerticalStackLayout>

                <VerticalStackLayout Spacing="5">
                    <Label Text="Password" TextColor="#555" FontSize="14" Margin="5,0,0,0"/>
                    <Border StrokeThickness="0" BackgroundColor="#F0F0F0" StrokeShape="RoundRectangle 12" HeightRequest="50" Padding="15,0">
                        <Grid ColumnDefinitions="30, *">
                            <Label Grid.Column="0" Text="ðŸ”’" VerticalOptions="Center" TextColor="Gray"/>
                            <Entry Grid.Column="1" 
                                   Text="{Binding Password}" 
                                   IsPassword="True" 
                                   Placeholder="Enter your password" 
                                   TextColor="Black"
                                   PlaceholderColor="Gray"
                                   VerticalOptions="Center"
                                   BackgroundColor="Transparent"/>
                        </Grid>
                    </Border>
                </VerticalStackLayout>

                <Label Text="Forgot Password?" 
                       TextColor="#007AFF" 
                       HorizontalOptions="End" 
                       FontSize="14">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer />
                    </Label.GestureRecognizers>
                </Label>

                <Label Text="{Binding ErrorMessage}" 
                       IsVisible="{Binding HasError}"
                       TextColor="Red" 
                       HorizontalOptions="Center"/>

                <Button Text="Login" 
                        Command="{Binding LoginCommand}" 
                        BackgroundColor="Black" 
                        TextColor="White"
                        FontAttributes="Bold"
                        CornerRadius="25" 
                        HeightRequest="55" 
                        Margin="0,20,0,0"/>

                <HorizontalStackLayout HorizontalOptions="Center" Spacing="5" Margin="0,10,0,0">
                    <Label Text="For New Users" TextColor="Gray"/>
                    <Label Text="Registration Option" TextColor="#007AFF" FontAttributes="Bold">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding GoToRegisterCommand}"/>
                        </Label.GestureRecognizers>
                    </Label>
                </HorizontalStackLayout>

                <ActivityIndicator IsRunning="{Binding IsBusy}" Color="Black" HorizontalOptions="Center"/>

            </VerticalStackLayout>
        </ScrollView>


        <ScrollView IsVisible="{Binding IsLoggedIn}">
            <VerticalStackLayout Spacing="20" Padding="20">

                <VerticalStackLayout Spacing="10" HorizontalOptions="Center" Margin="0,40,0,20">

                    <Border StrokeThickness="0"
                            StrokeShape="RoundRectangle 50"
                            HeightRequest="100"
                            WidthRequest="100"
                            HorizontalOptions="Center">
                        <Image Source="{Binding ProfileImageUrl}" 
                               Aspect="AspectFill"
                               HeightRequest="100"
                               WidthRequest="100"/>
                    </Border>

                    <Label Text="{Binding ProfileDisplayName}" 
                           FontSize="24" 
                           FontAttributes="Bold" 
                           TextColor="Black" 
                           HorizontalOptions="Center"/>

                    <Label Text="{Binding ProfileEmail}" 
                           FontSize="16" 
                           TextColor="Gray" 
                           HorizontalOptions="Center"/>
                </VerticalStackLayout>

                <BoxView HeightRequest="1" Color="#E0E0E0" Margin="0,10"/>

                <VerticalStackLayout Spacing="15">

                    <Button Text="Members" 
                            BackgroundColor="#F5F5F5" 
                            TextColor="Black" 
                            HorizontalOptions="Fill" 
                            CornerRadius="10" 
                            HeightRequest="50"/>

                    <Button Text="My Ads" 
                            BackgroundColor="#F5F5F5" 
                            TextColor="Black" 
                            HorizontalOptions="Fill" 
                            CornerRadius="10" 
                            HeightRequest="50"/>

                    <Button Text="Edit Profile" 
        Command="{Binding GoToEditProfileCommand}"
        BackgroundColor="#F5F5F5" 
        TextColor="Black" 
        HorizontalOptions="Fill" 
        CornerRadius="10" 
        HeightRequest="50"/>

                    <Button Text="Logout" 
                            Command="{Binding LogoutCommand}"
                            BackgroundColor="#FFEBEE" 
                            TextColor="#D32F2F" 
                            FontAttributes="Bold"
                            HorizontalOptions="Fill" 
                            CornerRadius="10" 
                            HeightRequest="50"
                            Margin="0,20,0,0"/>
                </VerticalStackLayout>
            </VerticalStackLayout>
        </ScrollView>

    </Grid>
</ContentPage>