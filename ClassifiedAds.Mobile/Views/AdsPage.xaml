<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:ClassifiedAds.Mobile.ViewModels"
             xmlns:model="clr-namespace:ClassifiedAds.Common.Dtos"
             x:Class="ClassifiedAds.Mobile.Views.AdsPage"
             Title="Latest Ads">

    <Grid RowDefinitions="Auto, *">
        <ActivityIndicator IsRunning="{Binding IsLoading}" 
                           IsVisible="{Binding IsLoading}"
                           Color="Orange"
                           Grid.Row="0" />

        <Button Text="Refresh Ads" 
                Command="{Binding LoadAdsCommand}" 
                Grid.Row="0"
                IsVisible="{Binding IsLoading, Converter={StaticResource InvertedBoolConverter}}"/>

        <CollectionView Grid.Row="1"
                        ItemsSource="{Binding Ads}"
                        SelectionMode="Single">
            <CollectionView.ItemsLayout>
                <LinearItemsLayout Orientation="Vertical" ItemSpacing="10" />
            </CollectionView.ItemsLayout>

            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="model:AdDTO">
                    <Frame Margin="10" Padding="0" CornerRadius="10" HasShadow="True">
                        <Grid ColumnDefinitions="120, *">

                            <Image Source="{Binding MainImageUrl}" 
                                   Aspect="AspectFill"
                                   HeightRequest="120"
                                   WidthRequest="120"
                                   Grid.Column="0"/>

                            <StackLayout Grid.Column="1" Padding="10" Spacing="5">
                                <Label Text="{Binding Title}" 
                                       FontAttributes="Bold" 
                                       FontSize="16" 
                                       LineBreakMode="TailTruncation"/>

                                <Label Text="{Binding City}" 
                                       FontSize="12" 
                                       TextColor="Gray"/>

                                <Label Text="{Binding Price, StringFormat='{0:C}'}" 
                                       TextColor="Green" 
                                       FontAttributes="Bold"
                                       FontSize="14"/>

                                <Label Text="{Binding Category}"
                                       FontSize="10"
                                       TextColor="Blue"/>
                            </StackLayout>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>